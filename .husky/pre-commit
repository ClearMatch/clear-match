#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-commit checks..."

# Run tests first
echo "🧪 Running tests..."
pnpm test --watchAll=false --passWithNoTests
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Fix tests before committing."
  exit 1
fi

# Run linting
echo "🔍 Running linter..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Fix linting errors before committing."
  exit 1
fi

# Run type checking
echo "📝 Running type checking..."
pnpm exec tsc --noEmit
if [ $? -ne 0 ]; then
  echo "❌ Type checking failed. Fix TypeScript errors before committing."
  exit 1
fi

# Run build
echo "🏗️  Running build..."
pnpm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed. Fix build errors before committing."
  exit 1
fi

echo "✅ All pre-commit checks passed!"