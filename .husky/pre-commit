#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-commit checks..."

# Run tests first
echo "ğŸ§ª Running tests..."
pnpm test --watchAll=false --passWithNoTests
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Fix tests before committing."
  exit 1
fi

# Run linting
echo "ğŸ” Running linter..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Fix linting errors before committing."
  exit 1
fi

# Run type checking
echo "ğŸ“ Running type checking..."
pnpm exec tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed. Fix TypeScript errors before committing."
  exit 1
fi

# Run build
echo "ğŸ—ï¸  Running build..."
pnpm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Fix build errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"