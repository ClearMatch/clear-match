# Clear Match Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment detection (optional - auto-detected from deployment platform)
# APP_ENV=development|staging|production
# VERCEL_ENV is automatically set by Vercel

# Node Environment
NODE_ENV=development

# =============================================================================
# MULTI-ENVIRONMENT SUPABASE CONFIGURATION
# =============================================================================

# Development Environment (local development)
DEV_SUPABASE_URL=https://your-dev-project.supabase.co
DEV_SUPABASE_ANON_KEY=your-dev-anon-key-here
DEV_SUPABASE_SERVICE_ROLE_KEY=your-dev-service-role-key-here

# Staging Environment (preview deployments)
STAGING_SUPABASE_URL=https://your-staging-project.supabase.co
STAGING_SUPABASE_ANON_KEY=your-staging-anon-key-here
STAGING_SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key-here

# Production Environment
PROD_SUPABASE_URL=https://your-prod-project.supabase.co
PROD_SUPABASE_ANON_KEY=your-prod-anon-key-here
PROD_SUPABASE_SERVICE_ROLE_KEY=your-prod-service-role-key-here

# Legacy Supabase Configuration (for backward compatibility)
# These will be used as fallback if environment-specific variables are not set
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# HubSpot Integration
HUBSPOT_API_KEY=your-hubspot-api-key-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session secret (must be at least 32 characters)
SESSION_SECRET=your-32-character-session-secret-here-abcdef0123456789

# Application URL
NEXT_PUBLIC_APP_URL=https://your-app-domain.com

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# Rate Limiting (Optional - Redis for production)
# If not provided, will use memory-based rate limiting
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here